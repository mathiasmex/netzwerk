<%- unless groups.empty? -%>
  <h2><%= title %></h2>
  <ul class="grid groups small">
    <%- groups.each do |group| -%>
      <%= render :partial => 'shared/contact', :locals => {:contact => group} %>
    <%- end -%>
    <li class="more">
      <%= link_to t('groups.see_all_groups'), 
          link == "admin" ? 
              admin_groups_person_path(@person) : groups_person_path(@person) %>
    </li>
  </ul>
<%- end -%>