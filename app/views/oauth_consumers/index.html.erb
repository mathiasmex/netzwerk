<%- column_div :type => :primary do -%>
<h2><%=t ('services.services') %></h2>

  <% if @consumer_tokens.empty? %>
    <p><%=t ('services.currently_not_connected') %></p>
  <% else %>
    <p><%=t ('services.currently_connected') %></p>
    <ul class="list full">
      <% @consumer_tokens.each do |token| %>
        <li class="<%= token.class.service_name.to_s.humanize %>">
          <%= link_to token.class.service_name.to_s.humanize, oauth_consumer_path(token.class.service_name) %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% unless @services.empty? %>
  <h2><%=t ('services.can_connect_services') %></h2>
    <ul class="list full">
      <% @services.each do |service| %>
        <li class="<%= service.to_s.humanize %>">
          <%= link_to service.to_s.humanize, oauth_consumer_path(service) %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>